<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".post_task.SecondActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="Insert Your Task"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="23dp"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/month"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@id/date"
                android:text=" -"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="23dp"
                android:text="Month"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/ET_Task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:autofillHints="Enter your Task"
        android:background="@drawable/rec_shape"
        android:padding="10dp"
        android:hint="Enter your Task"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rec_shape"
        android:outlineProvider="bounds"
        android:backgroundTint="@color/black"
        android:text="Add"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_fetch_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="My Task"
                android:background="@drawable/rec_shape"
                android:backgroundTint="@color/black"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:layout_marginBottom="5dp"
                android:id="@+id/Btn_refresh"
                android:backgroundTint="@color/black"
                android:background="@drawable/rec_shape"
                android:textSize="14dp"
                android:layout_marginStart="150dp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/Btn_fetch_task"
                android:layout_marginTop="20dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rec_shape" />


</LinearLayout>